{
  "editor.accessibilitySupport": "off",
  "editor.minimap.enabled": false,
  "files.exclude": {
    "**/.git": false
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.fontFamily": "MesloLGS Nerd Font Mono",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  // Markdown
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    },
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  // Markdownlint
  // https://marketplace.visualstudio.com/items?itemName=DavidAnson.vscode-markdownlint
  "markdownlint.config": {
    // "MD013": { "line_length": 240 },
    "MD013": false,
    "MD034": false,
    "MD038": false,
    "MD037": false
  },
  "workbench.editor.enablePreview": false,

  // Vim
  // https://gist.github.com/RainbowDashy/c72e330aa66f2fd609b51c6bf9887780
  // https://dev.to/ansonh/10-vs-code-vim-tricks-to-boost-your-productivity-1b0n#9-highlight-yanked-text
  "editor.lineNumbers": "relative",
  // Cursor Surrounding Lines
  "editor.cursorSurroundingLines": 8,
  "geminicodeassist.displayInlineContextHint": false,
  "terminal.integrated.allowedLinkSchemes": [
    "file",
    "http",
    "https",
    "mailto",
    "vscode",
    "vscode-insiders",
    "docker-desktop"
  ]
